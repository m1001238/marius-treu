INCLUDE = .

CFLAGS = -g -Wall -ansi

LFLAGS = -lsqlite3

CC = g++

all:	ircbot



ircbot:	main.o Connect.o Bot.o Database.o Utilities.o
	$(CC) -o ircbot main.o -I$(INCLUDE) $(CFLAGS) $(LFLAGS)
main.o:	main.cpp Bot.h
	$(CC) -c main.cpp -I$(INCLUDE) $(CFLAGS) $(LFLAGS)
Connect.o:	Connect.cpp Connect.h
	$(CC) -c Connect.cpp -I$(INCLUDE) $(CFLAGS) $(LFLAGS)
Bot.o:	Bot.cpp Bot.h Connect.h Database.h
	$(CC) -c Bot.cpp -I$(INCLUDE) $(CFLAGS) $(LFLAGS)
Database.o:	Database.cpp Database.h Utilities.h
	$(CC) -c Database.cpp -I$(INCLUDE) $(CFLAGS) $(LFLAGS)
Utilities.o:	Utilities.cpp Utilities.h
	$(CC) -c Utilities.cpp -I$(INCLUDE) $(CFLAGS) $(LFLAGS)

clean:
	rm main.o Connect.o Bot.o Database.o Utilities.o
